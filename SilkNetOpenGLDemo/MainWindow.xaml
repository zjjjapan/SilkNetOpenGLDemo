<Window x:Class="SilkNetOpenGLDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SilkNetOpenGLDemo"
        Title="Silk.NET OpenGL Demo" Height="450" Width="800">
    <Grid>
        <Button Content="Move Line" Click="MoveLineButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Height="500">
            <StackPanel Orientation="Vertical">
                <local:OpenGLLineControl x:Name="LineControl" Width="800" Height="450"/>
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Window>

